/* miniprogram/pages/addJournal/addJournal.wxss */

page {
  width: 100%;
  height: 100%;
}

.Journal {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}

.Journal-title {
  width: 100%;
  height: 80rpx;
  background-color: #eee;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
  padding: 16rpx;
  box-sizing: border-box;
}

.classify-label {
  margin: 25rpx;
}

radio .wx-radio-input {
  width: 25rpx;
  height: 25rpx;
}

.classify-text {
  color: #888;
  font-size: 35rpx;
}

.Journal-text {
  margin-top: 10rpx;
  flex: 1;
  box-sizing: border-box;
  width: 100%;
  font-size: 28rpx;
  padding: 30rpx;
  background-color: #eee;
  border-radius: 10rpx;
}

.Journal-save {
  flex: 0 0 90rpx;
  margin: 15rpx 0rpx;
  background-color: #33c9ff;
  color: #fff;
}