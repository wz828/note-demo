/* miniprogram/pages/journalDetail/journalDetail.wxss */

/*日志样式*/

.journal {
  /* box-sizing: border-box; */
  padding: 20rpx;
}

.journal-title {
  font-size: 40rpx;
  margin-left: 20rpx;
  line-height: 1.5;
  text-align: center;
}

.journal-classify {
  display: inline-block;
  font-size: 34rpx;
  margin-left: 185rpx;
  margin-right: 25rpx;
}

.time {
  display: inline-block;
  font-size: 26rpx;
  padding: 16rpx 0 6rpx;
}

.time-hour {
  margin-left: 20rpx;
}

.journal-textbox {
  box-sizing: border-box;
  width: 100%;
  height: auto;
  padding: 31rpx;
  margin-top: 20rpx;
  background-color: #f4f5f7;
}

.journal-text {
  font-size: 28rpx;
  line-height: 1.5;
}
